<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/item_home">

    <fragment
        android:id="@+id/item_home"
        android:name="com.example.feedcraft.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_item_home_to_item_feed"
            app:destination="@id/item_feed" />
    </fragment>
    <fragment
        android:id="@+id/item_feed"
        android:name="com.example.feedcraft.FeedFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_item_feed_to_feedDialogFragment"
            app:destination="@id/feedDialogFragment" />
        <action
            android:id="@+id/action_item_feed_to_deleteDialogFragment"
            app:destination="@id/deleteDialogFragment" />
        <action
            android:id="@+id/action_item_feed_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/item_settings"
        android:name="com.example.feedcraft.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <dialog
        android:id="@+id/feedDialogFragment"
        android:name="com.example.feedcraft.FeedDialogFragment"
        android:label="fragment_feed_dialog"
        tools:layout="@layout/fragment_feed_dialog" />
    <dialog
        android:id="@+id/deleteDialogFragment"
        android:name="com.example.feedcraft.DeleteDialogFragment"
        android:label="fragment_delete_dialog"
        tools:layout="@layout/fragment_delete_dialog" />
    <dialog
        android:id="@+id/addCaptionDialogFragment2"
        android:name="com.example.feedcraft.AddCaptionDialogFragment"
        android:label="fragment_add_caption_dialog"
        tools:layout="@layout/fragment_add_caption_dialog" />
    <fragment
        android:id="@+id/scheduleReminderFragment"
        android:name="com.example.feedcraft.ScheduleReminderFragment"
        android:label="fragment_schedule_reminder"
        tools:layout="@layout/fragment_schedule_reminder" >
        <action
            android:id="@+id/action_scheduleReminderFragment_to_finishFragment"
            app:destination="@id/finishFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.feedcraft.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_editFragment_to_addCaptionDialogFragment2"
            app:destination="@id/addCaptionDialogFragment2" />
        <action
            android:id="@+id/action_editFragment_to_finishFragment"
            app:destination="@id/finishFragment" />
        <action
            android:id="@+id/action_editFragment_to_item_feed"
            app:destination="@id/item_feed" />
    </fragment>
    <fragment
        android:id="@+id/finishFragment"
        android:name="com.example.feedcraft.FinishFragment"
        android:label="fragment_finish"
        tools:layout="@layout/fragment_finish" >
        <action
            android:id="@+id/action_finishFragment_to_item_feed"
            app:destination="@id/item_feed" />
        <action
            android:id="@+id/action_finishFragment_to_scheduleReminderFragment"
            app:destination="@id/scheduleReminderFragment" />
    </fragment>
</navigation>